[
/**********************
/ Python
***********************/
    { 
    // Executes the selected Python code in the terminal when the key combination "cmd+enter" is pressed.
            "key": "cmd+enter",
            "command": "python.execSelectionInTerminal",
            "when": "editorTextFocus && !findInputFocussed && !jupyter.ownsSelection && !notebookEditorFocused && !replaceInputFocussed && editorLangId == 'python'"
    },
    { 
    // Executes the selected Python code in the terminal when the key combination "ctrl+enter" is pressed.
                "key": "ctrl+enter",
                "command": "python.execSelectionInTerminal",
                "when": "editorTextFocus && !findInputFocussed && !jupyter.ownsSelection && !notebookEditorFocused && !replaceInputFocussed && editorLangId == 'python'"
        },

/**********************
/ R
***********************/
    {
        "key": "alt+-",
        "command": "type",
        "when": "editorLangId == r && editorTextFocus || editorLangId == rmd && editorTextFocus",
        "args": {"text": " <- "}
    },
    {
        "key": "ctrl+-",
        "command": "type",
        "when": "editorLangId == r && editorTextFocus || editorLangId == rmd && editorTextFocus",
        "args": {"text": " <- "}
    },
    {
        "key": "ctrl+shift+m",
        "command": "type",
        "when": "editorLangId == r && editorTextFocus || editorLangId == rmd && editorTextFocus",
        "args": {"text": " %>%\n"}
    },

/**********************
/ Quarto
***********************/
    {
        "key": "alt+-",
        "command": "type",
        "when": "editorLangId = qmd && editorTextFocus",
        "args": {"text": " <- "}
    },
    {
        "key": "ctrl+-",
        "command": "type",
        "when": "editorLangId = qmd && editorTextFocus",
        "args": {"text": " <- "}
    },
    {
        "key": "cmd+shift+m",
        "command": "type",
        "when": "editorLangId = qmd && editorTextFocus",
        "args": {"text": " %>%\n"}
    },
    {
        "key": "ctrl+shift+m",
        "command": "type",
        "when": "editorLangId = qmd && editorTextFocus",
        "args": {"text": " %>%\n"}
    },



/* 
Closing bracket
*/
]
